<div class="row">
  <div class="col-md-6 offset-md-3">
    <div class="card">
      <div class="card-header">
        <h4>Verify User</h4>
      </div>
      <div class="card-body">
        <%= form_tag verify_user_path, multipart: true do %>
          <div class='form-group'>
            <%= label_tag :email %>
            <%= email_field_tag :email, params[:email], placeholder: 'Enter the user\'s email', required: true, class: 'form-control' %>
          </div>

          <div class='form-group'>
            <div>
              <%= label_tag :image, 'Image (png)' %>
            </div>
            <%= file_field_tag :image, required: true %>
          </div>

          <div>
            <%= submit_tag "Verify User", class: "btn btn-default btn-primary float-right" %>
          </div>
        <% end %>
      </div>
    </div>
    <p class="text-center users-link"><%= link_to "Go to users list", root_path %></p>
  </div>
</div>
